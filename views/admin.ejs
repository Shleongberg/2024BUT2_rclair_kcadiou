<% if(isAuth) { %>
    <%- include('header'); -%>
    
    <!DOCTYPE html>
    <html lang="fr">
    
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Page Admin</title>
        <link rel="stylesheet" href="style.css">
    </head>
    
    <body>

    
        <!-- Section de gestion des agents -->
        <section id="agents" class="admin-section">
            <h2>Gestion des agents</h2>
    
            <% if (role === 'admin') { %>
                <!-- Formulaire de création d'un agent, visible uniquement pour les admins -->
                <form id="agent-form" class="form" action="/admin/agents/creer" method="POST">
                    <input type="text" name="login" placeholder="Nom d'utilisateur de l'agent" required>
                    <input type="email" name="email" placeholder="Email de l'agent" required>
                    <input type="password" name="password" placeholder="Mot de passe" required>
                    <button type="submit">Créer un agent</button>
                </form>
    
                <!-- Affichage du message de succès ou d'erreur -->
                <% if (message) { %>
                    <div class="<%= message.type %>">
                        <%= message.content %>
                    </div>
                <% } %>
            <% } %>
    
            <!-- Liste des agents existants -->
            <h3>Liste des agents</h3>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% agents.forEach(function(agent) { %>
                        <tr>
                            <td><%= agent.id %></td>
                            <td><%= agent.login %></td>
                            <td><%= agent.email %></td>
                            
                            <% if (role === 'admin') { %>
                                <!-- Formulaire de suppression d'un agent, visible uniquement pour les admins -->
                                <td>
                                    <form action="/admin/agents/supprimer" method="POST" style="display:inline;">
                                        <input type="hidden" name="id" value="<%= agent.id %>">
                                        <button type="submit" class="delete">Supprimer</button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    
        <!-- Section de gestion des produits -->
        <section id="produits" class="admin-section">
            <h2>Gestion des produits</h2>
            <form id="product-form" class="form">
                <input type="text" placeholder="Nom du produit" required>
                <input type="text" placeholder="marque" required>
                <input type="text" placeholder="modèle" required>
                <input type="text" placeholder="description" required>
                <input type="number" placeholder="Prix (€)" step="0.01" required>
                <input type="number" placeholder="Stock" required>
                <button type="submit">Créer un produit</button>
            </form>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Altères 5kg</td>
                        <td>19.99€</td>
                        <td>100</td>
                        <td>
                            <button class="edit">Modifier</button>
                            <button class="delete">Supprimer</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </body>
    
    </html>
    
    <%- include('footer'); -%>
    <% } %>
    