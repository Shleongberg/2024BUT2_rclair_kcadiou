<% if(isAuth){ %>
<%- include('header'); -%>
    

<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Admin</title>
    <link rel="stylesheet" href="test.css">
</head>


<body>
    <nav class="admin-nav">
        <ul>
            <li><a href="#agents">Agents</a></li>
            <li><a href="#produits">Produits</a></li>
        </ul>
    </nav>

    <section id="agents" class="admin-section">
        <h2>Gestion des agents</h2>
        <form id="agent-form" class="form">
            <input type="text" placeholder="Nom de l'agent" required>
            <input type="email" placeholder="Email de l'agent" required>
            <button type="submit">Créer un agent</button>
        </form>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Jean Dupont</td>
                    <td>jdupont@gmail.com</td>
                    <td>
                        <button class="edit">Modifier</button>
                        <button class="delete">Supprimer</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>

    <section id="produits" class="admin-section">
        <h2>Gestion des produits</h2>
        <form id="product-form" class="form">
            <input type="text" placeholder="Nom du produit" required>
            <input type="number" placeholder="Prix (€)" step="0.01" required>
            <input type="number" placeholder="Stock" required>
            <button type="submit">Créer un produit</button>
        </form>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Altères 5kg</td>
                    <td>19.99€</td>
                    <td>100</td>
                    <td>
                        <button class="edit">Modifier</button>
                        <button class="delete">Supprimer</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>
</body>

</html>

<%- include('footer'); -%>
<% } %>
