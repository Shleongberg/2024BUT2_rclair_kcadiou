<%- include('header'); -%>

<section class="login-box">
        <div class="login">
            <img src="/image/UserIcone.png" width="100px">
            <h2 id="form-title">Inscription</h2>
            <form id="auth-form" action="/inscription" method="post">
                <label for="name">Login :</label>
                <input type="text" id="name" name="username" placeholder="Nom d'utilisateur" required>
                <label for="login-password">Mot de passe :</label>
                <input type="password" id="login-password" name="password" placeholder="Mot de passe" required>

                <label for="signup-email" id="signup-email-label" >Email :</label>
                <input type="email" id="signup-email" name="email" placeholder="Email" >

                <button type="submit" class="login-button" id="submit-button">S'inscrire'</button>
            </form>
            <a href="/connexion"><span class="toggle-link" >Déjà client ? Connectez-vous</span></a>

        </div>
    </section>

        <%- include('footer'); -%>